<section class="login">

  <h1>Login</h1>

  <% if flash[:notice] %>
    <div class="alert alert-danger" role="alert"><%= flash[:notice] %></div>
  <% end %>

  <%= form_tag '/login', class: 'login-form' do %>
    Email: <%= text_field_tag :email %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit", class: 'btn btn-primary' %>
  <% end %>

</section>
